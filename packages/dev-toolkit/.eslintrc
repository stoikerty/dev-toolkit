{
  "extends": [
    "airbnb-base"
  ],

  "parser": "babel-eslint",

  "rules": {
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": [
      "error",
      {
        "ignore": [ "^dist/" ]
      }
    ],
    "import/extensions": [
      "off",
      "never"
    ],
    "arrow-parens": [2, "always"]
  },

  "env": {
    "mocha": true
  }
}
