{
  "name": "dev-toolkit",
  "version": "6.0.0-alpha-1",
  "description": "Development Toolkit for React Veterans",
  "main": "index.js",
  "scripts": {
    "prepublish": "npm run build",
    "build": "babel src --out-dir dist",
    "watch": "babel src --watch --out-dir dist",
    "test": "bnr test",
    "test-single": "bnr test --watch --grep",
    "lint": "eslint --config .eslintrc src",
    "test-minimal": "npm run build && cd ./starting-point/minimal && node ../../dist/bin/dev-toolkit.js"
  },
  "betterScripts": {
    "test": {
      "command": "mocha --opts .mocha.opts",
      "env": {
        "TOOLKIT_TEST": "true",
        "NODE_PATH": "."
      }
    }
  },
  "bin": {
    "dev-toolkit": "src/bin/dev-toolkit.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stoikerty/dev-toolkit.git"
  },
  "keywords": [
    "stoikerty",
    "webpack",
    "sass",
    "react",
    "browserify",
    "gulp",
    "moonboots",
    "middleman",
    "stk-toolkit",
    "universal-dev-toolkit",
    "dev-toolkit",
    "create-react-app"
  ],
  "author": "Jorge Antunes @stoikerty",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stoikerty/dev-toolkit/issues"
  },
  "homepage": "https://github.com/stoikerty/dev-toolkit#readme",
  "dependencies": {
    "babel-preset-stage-1": "^6.24.1",
    "sinon": "^2.3.5",
    "sinon-chai": "^2.11.0",
    "webpack": "^3.1.0",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-hot-middleware": "^2.18.2"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-dynamic-import-node": "^1.0.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2016": "^6.22.0",
    "babel-preset-es2017": "^6.22.0",
    "better-npm-run": "^0.0.14",
    "chai": "^3.5.0",
    "cross-spawn": "^5.0.1",
    "dirty-chai": "^1.2.2",
    "eslint": "^3.4.0",
    "eslint-config-airbnb-base": "^11.0.1",
    "eslint-plugin-import": "^2.2.0",
    "mocha": "^3.2.0",
    "yargs": "^8.0.2"
  }
}
