{
  "name": "dev-toolkit",
  "version": "6.0.0-beta-4",
  "description": "Development Toolkit for React Veterans",
  "main": "index.js",
  "scripts": {
    "prepare": "npm run build",
    "build": "babel src --out-dir dist",
    "watch": "babel src --watch --out-dir dist",
    "test": "bnr test",
    "test-single": "bnr test --watch --grep",
    "lint": "eslint --config .eslintrc src",
    "quicklink": "cd ../babel-runner/ && npm run build && cd ../dev-toolkit/",
    "test-minimal": "bnr test-minimal"
  },
  "betterScripts": {
    "test": {
      "command": "mocha --opts .mocha.opts",
      "env": {
        "TOOLKIT_TEST": "true",
        "NODE_PATH": "."
      }
    },
    "test-minimal": {
      "command": "npm run build && cd $MINIMAL_EXAMPLE && node $DEV_TOOLKIT_BINARY",
      "env": {
        "MINIMAL_EXAMPLE": "../../examples/minimal",
        "DEV_TOOLKIT_BINARY": "../../packages/dev-toolkit/dist/bin/index.js"
      }
    }
  },
  "bin": {
    "dev-toolkit": "dist/bin/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stoikerty/dev-toolkit"
  },
  "keywords": [
    "stoikerty",
    "webpack",
    "sass",
    "react",
    "browserify",
    "gulp",
    "moonboots",
    "middleman",
    "stk-toolkit",
    "universal-dev-toolkit",
    "dev-toolkit",
    "create-react-app"
  ],
  "author": "Jorge Antunes @stoikerty",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stoikerty/dev-toolkit/issues"
  },
  "homepage": "https://github.com/stoikerty/dev-toolkit#readme",
  "dependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-dynamic-import-node": "^1.0.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-1": "^6.24.1",
    "babel-runner": "0.0.0-beta-1",
    "bundle-loader": "^0.5.5",
    "cross-spawn": "^5.0.1",
    "fs-extra": "^4.0.1",
    "sinon": "^2.4.1",
    "sinon-chai": "^2.13.0",
    "string-length": "^2.0.0",
    "webpack": "^3.5.5",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.18.2",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "better-npm-run": "^0.0.14",
    "chai": "^3.5.0",
    "dirty-chai": "^1.2.2",
    "eslint": "^3.4.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "mocha": "^3.5.0"
  }
}
