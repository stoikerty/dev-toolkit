{
  "name": "babel-runner",
  "version": "1.0.0",
  "description": "Helper for integrating babel config & node hooks",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "npm run build",
    "publish-beta": "npm publish --tag beta",
    "build": "babel src --out-dir dist",
    "watch": "babel src --watch --out-dir dist",
    "lint": "prettier --write './**/*.js' && eslint --config .eslintrc src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "bin": {
    "babel-runner": "dist/bin/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stoikerty/dev-toolkit/tree/master/packages/babel-runner"
  },
  "keywords": [
    "babel",
    "node-hooks",
    "require-hooks",
    "universal",
    "universal javascript",
    "isomorphic",
    "babelrc",
    "babel-register",
    "dev-toolkit"
  ],
  "author": "Jorge Antunes @stoikerty",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-1": "^6.24.1",
    "eslint": "^4.4.0",
    "eslint-config-airbnb-base": "^11.0.1",
    "eslint-plugin-import": "^2.2.0",
    "prettier": "^1.7.4"
  },
  "dependencies": {
    "babel-register": "^6.26.0",
    "file-exists": "^4.0.0"
  }
}
